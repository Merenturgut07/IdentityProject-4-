@model List<Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/TemaLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gönderilen Bütün Mesajlar </h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> #  </th>
                            <th> Gönderen  </th>
                            <th> Alıcı </th>
                            <th> Konu </th>
                            <th> Gönderen Adı </th>
                            <th> Alıcı Adı </th>
                            <th> Tarih </th>
                            <th> Sil </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.MessageId  </td>
                                <td> @item.Receiver  </td>
                                <td> @item.Sender  </td>
                                <td> @item.Subject  </td>
                                <td> @item.ReceiverName  </td>
                                <td> @item.SenderName  </td>
                                <td> @item.MessageDate.ToString("dd-MMM-yyy")  </td>
                                <td> <a href="/AllMessage/DeleteMessage/@item.MessageId" onclick="return confirm('Gerçekten Silmek İstiyor Musun')" class="btn btn-danger"> Sil</a>  </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

