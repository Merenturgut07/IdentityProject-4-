@model CreateRegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Register</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4> Kayıt Ol  </h4>
                            <h6 class="font-weight-light">Bir kaç adımda kolayca kayıt olun  </h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="@Model.Name"  placeholder="İsim ">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="@Model.Surname" placeholder="Soyisim">
                                </div>

                                <div class="form-group">
                                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="@Model.UserName" placeholder="Kullanıcı Adı">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                                    <input type="email" class="form-control form-control-lg" asp-for="@Model.Mail" placeholder="Mail Adresi">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    <input type="password" class="form-control form-control-lg" asp-for="@Model.Password" placeholder="Şifre">
                                </div>

                                <div class="form-group">
                                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                    <input type="password" class="form-control form-control-lg" asp-for="@Model.ConfirmPassword" placeholder="Şifre Tekrarı">
                                </div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            Tüm Şartlar ve Koşulları kabul ediyorum
                                        </label>
                                    </div>
                                </div>
                                <br />
                                
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol </button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Zaten bir hesabınız var mı? <a href="/Login/Index/" class="text-primary">Giriş Yap</a>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/skydash/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/skydash/js/off-canvas.js"></script>
    <script src="~/skydash/js/hoverable-collapse.js"></script>
    <script src="~/skydash/js/template.js"></script>
    <script src="~/skydash/js/settings.js"></script>
    <script src="~/skydash/js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>
