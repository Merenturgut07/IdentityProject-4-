@model List<Message>

@{
    ViewData["Title"] = "Sender";
    Layout = "~/Views/TemaLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Gönderdiğimiz Mesajlar  </h4>
			<div class="table-responsive">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>Konu</th>
							<th>Alıcı</th>
							<th>Tarih</th>
							<th>Detaylar</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.MessageId</td>
								<td>@item.Subject</td>
								<td>@item.ReceiverName</td>
								<td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
								<td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-info">Mesajı Gör</a> </td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

